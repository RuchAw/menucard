{% extends 'base.html.twig' %}

{% block body %}

{% for message in app.flashes('order')%}
	<div class="alert alert-success"> 
		<h3>{{ message }}</h3>
	</div>
{% endfor %}

<!-- Playlist section -->
	<section class="playlist-section spad">
		<div class="container-fluid">
			<div class="section-title">
				<h2>Menu card</h2>
			</div>
			<div class="container">
				<ul class="playlist-filter controls">
                    <li class="control" data-filter=".Main">Main dishes</li>
                    <li class="control" data-filter=".Appetizer">Appetizers</li>
					<li class="control" data-filter=".Drink">Drinks</li>
					<li class="control" data-filter=".Dessert">Desserts</li>
					<li class="control" data-filter="all">All dishes</li>
				</ul>
			</div>                                              
			<div class="clearfix"></div>
			<div class="row playlist-area">
            {% for dish in dishes %}    
				<div class="mix col-lg-3 col-md-4 col-sm-6 genres {{ dish.category }}">
					<div class="playlist-item">
						<img src="{{asset('images/' ~ dish.image )}}" alt="">
						<h5>{{ dish.name }} - € {{ dish.price }} </h5>
                        <p>Order N° . {{ dish.id }}</p>
						<a class="btn btn-outline-danger btn-sm" href={{ path("ord", {id: dish.id}) }} role="button">Order</a>
					</div>
				</div>
            {% endfor %}
			</div>
		</div>
	</section>
	<!-- Playlist section end -->

{% endblock %}
