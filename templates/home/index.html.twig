{% extends 'base.html.twig' %}

{% block title %}Hello HomeController!{% endblock %}

{% block body %}

<h1>Welcome to the menu card</h1>
<!-- Hero section -->
	<section class="hero-section">
		<div class="hero-slider owl-carousel">
			<div class="hs-item">
				<div class="container">
					<div class="row">
						<div class="col-lg-6">
							<div class="hs-text">
								<h2><span>{{ dish1.name }}</span> !</h2>
								<p>Try it now! for only  {{dish1.price}} €</p>
								<p class="text-muted">{{dish1.description}}</p>
								<a href="{{ path('menu') }}" class="site-btn">Menu card</a>
								<a href="{{ path('order',{id: dish1.id}) }}" class="site-btn sb-c2">Order</a>
							</div>
						</div>
						<div class="col-lg-6">
							<div class="hr-img">
								<img src="{{asset('images/' ~ dish1.image)}}" alt="">
							</div>
						</div>
					</div>
				</div>
			</div>
			<div class="hs-item">
				<div class="container">
					<div class="row">
						<div class="col-lg-6">
							<div class="hs-text">
								<h2><span>{{ dish2.name }}</span> !</h2>
								<p>Try it now! for only  {{dish2.price}} €</p>
								<p class="text-muted">{{dish2.description}}</p>
								<a href="{{ path('menu') }}" class="site-btn">Menu card</a>
								<a href="{{ path('order',{id: dish2.id}) }}" class="site-btn sb-c2">Order</a>
							</div>
						</div>
						<div class="col-lg-6">
							<div class="hr-img">
								<img src="{{asset('images/' ~ dish2.image)}}" alt="">
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</section>
	<!-- Hero section end -->

{% endblock %}
